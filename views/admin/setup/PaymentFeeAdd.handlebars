<div class="panel panel-default">
    <div class="panel-heading font-header"><h4>Register New Payment Fee</h4></div>
    <div class="panel-body">
         <form id="regform1" method="post" action="/admin/setup/payfee/add" name="regform1" >
                <div class="form-group">
                    <label class="control-label" for="deptname">Department</label>
                    <select class="form-control input-rounded" name="deptname" id= "deptname" >
                        <option value="" selected> Select </option>
                        {{#dept}}
                        <option value="{{_id}}"> {{name}} </option>
                        {{/dept}}
                    </select>
                </div>
        
                <div class="form-group">
                    <label class="control-label" for="amount">Amount</label>
                    <input type="text" name="amount" id="amount" class="form-control input-rounded" placeholder="Amount">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-rounded">Save</button>
                </div>
         </form>
    </div>
</div>


