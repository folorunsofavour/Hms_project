<div class="panel panel-default">
    <div class="panel-heading font-header"><h4>Register New Medicine Name</h4></div>
    <div class="panel-body">
         <form id="regform1" method="post" action="/admin/setup/phar/medname/add" name="regform1" >
                <div class="form-group">
                    <label class="control-label" for="medcategory">Medicine Category</label>
                    <select class="form-control input-rounded" name="medcategory" id= "medcategory" >
                        <option value="" selected> Select </option>
                        {{#medcategory}}
                        <option value="{{_id}}"> {{name}} </option>
                        {{/medcategory}}
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label" for="name">Medicine Name</label>
                    <input type="text" name="name" id="name" class="form-control input-rounded" placeholder="Medicine Name">
                </div>
                <div class="form-group">
                    <label class="control-label" for="sales_price">Medicine Price</label>
                    <input type="text" name="sales_price" id="sales_price" class="form-control input-rounded" placeholder="Medicine Price">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-rounded">Save</button>
                </div>
         </form>
    </div>
</div>


