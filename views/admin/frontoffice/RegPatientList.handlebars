

<div class="panel panel-default">
    <div class="panel-heading font-header">
        <a href="/admin/frontoffice/regpatient/add">
            <button class="btn btn-success btn-rounded">Register Patient
                <i class="mdi mdi-plus"></i>
            </button>
        </a>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-8 col-md-9">
                <div class="form-inline font-12">
                    <h2>List of Registered Patient(s)</h2>
                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped" id= "datatable">
            <thead>
                <tr>
                    <th>NAME OF PATIENT</th>
                    <th>EMAIL ADDRESS</th>
                    <th>PHONE NUMBER</th>
                    <th>PATIENT ID/CARD NUMBER</th>
                    <th>GENDER</th>
                    <th>ADDRESS</th>
                    <th>STATUS</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
                {{#if result}}
                    {{#result}}
                    <tr>
                        <td>{{first_name}} {{middle_name}} {{last_name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone_number}}</td>
                        <td>{{patient_id}}</td>
                        <td>{{gender.name}}</td>
                        <td>{{address}}</td>
                        
                        {{#ifCond status '==' 0 }}
                            <td>Not Approved</td>
                            {{else}}
                            <td>Approved</td>
                        {{/ifCond}}

                        <td>
                            <a href="/admin/frontoffice/regpatient/edit/{{ _id }}" class="btn btn-default btn-rounded"> 
                                Edit
                            </a> 
                            <a href="/admin/frontoffice/regpatient/delete/{{ _id }}" onclick="return confirm('Are you sure you want to delete this Patient?')" class="btn btn-danger btn-rounded"> 
                                Delete
                            </a> 
                            {{#ifCond status '==' 0}}
                                <a class="btn btn-gray btn-rounded"  href="/admin/frontoffice/regpatient/approve/{{ _id }}">
                                    New Issue
                                </a>
                                {{else}}
                                <a class="btn btn-dark btn-rounded"  href="/admin/frontoffice/regpatient/disapprove/{{ _id }}">
                                    UnIssue
                                </a>
                            {{/ifCond}}
                        </td>
                    </tr>
                    {{/result}}
                {{else}}
                    <tr>There are no Registered Patient(s) yet</tr>
                {{/if}} 
            </tbody>
        </table>
    </div>
</div>
