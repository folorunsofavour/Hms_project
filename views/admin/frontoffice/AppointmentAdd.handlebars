<div class="panel panel-default">
    <div class="panel-heading font-header"><h4>Register New Appointment</h4></div>
    <div class="panel-body">
         <form id="regform1" method="post" action="/admin/frontoffice/appointment/add" name="regform1" >
                <div class="form-group">
                    <label class="control-label" for="card_no">Patient ID/Card Number</label>
                    <input type="text" name="card_no" id="card_no" class="form-control input-rounded" placeholder="Patient ID/Card Number">
                </div>

                <div class="form-group">
                    <label class="control-label" for="appdate">Appointment Date</label>
                    <input type="date" name="appdate" id="appdate" class="form-control input-rounded">
                </div>

                <div class="form-group">
                    <label class="control-label" for="message">Message</label>
                    <textarea name="message" id="message" class="form-control input-rounded" placeholder="Message"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-rounded">Save</button>
                </div>
         </form>
    </div>
</div>


