<div class="panel panel-default">
    <div class="panel-heading font-header"><h4>Edit Patient Records</h4></div>
    <div class="panel-body">
         <form id="regform1" method="post" action="/admin/frontoffice/regpatient/edit" name="regform1" >
                <div class="form-group">
                    <input name="id" type="hidden" value="{{ result._id }}" />
                    <label class="control-label" for="first_name">First Name</label>
                    <input type="text" name="first_name" id="first_name" class="form-control input-rounded" placeholder="First Name" value="{{ result.first_name }}">
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="middle_name">Middle Name</label>
                            <input type="text" name="middle_name" id="middle_name" class="form-control input-rounded" placeholder="Middle Name" value="{{ result.middle_name }}">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="last_name">Last Name</label>
                            <input type="text" name="last_name" id="last_name" class="form-control input-rounded" placeholder="Last Name" value="{{ result.last_name }}">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="gender">Gender</label>
                            <select class="form-control input-rounded" name="gender" id= "gender">
                            <option value="" selected> Select </option>
                            {{#result2}}
                            <option value="{{_id}}" {{#ifCond _id '==' ../result.gender._id}}selected{{/ifCond}}> {{name}} </option>
                            {{/result2}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="patient_id">Patient ID</label>
                            <input type="text" name="patient_id" id="patient_id" class="form-control input-rounded" placeholder="Patient ID" disabled value="{{ result.patient_id }}">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="phone_number">Phone Number</label>
                            <input type="text" name="phone_number" id="phone_number" class="form-control input-rounded" placeholder="Phone Number" value="{{ result.phone_number }}">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="email">Email Address</label>
                            <input type="text" name="email" id="email" class="form-control input-rounded" placeholder="Email Address" disabled value="{{ result.email }}">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label" for="address">Address</label>
                    <input type="text" name="address" id="address" class="form-control input-rounded" placeholder="Address" value="{{ result.address }}">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-rounded">Save</button>
                </div>
         </form>
    </div>
</div>


