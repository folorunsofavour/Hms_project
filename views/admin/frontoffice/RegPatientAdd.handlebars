<div class="panel panel-default">
    <div class="panel-heading font-header"><h4>Register New Patient</h4></div>
    <div class="panel-body">
         <form id="regform1" method="post" action="/admin/frontoffice/regpatient/add" name="regform1" >
                <div class="form-group">
                    <label class="control-label" for="first_name">First Name</label>
                    <input type="text" name="first_name" id="first_name" class="form-control input-rounded" placeholder="First Name">
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="middle_name">Middle Name</label>
                            <input type="text" name="middle_name" id="middle_name" class="form-control input-rounded" placeholder="Middle Name">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="last_name">Last Name</label>
                            <input type="text" name="last_name" id="last_name" class="form-control input-rounded" placeholder="Last Name">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="gender">Gender</label>
                            <select class="form-control input-rounded" name="gender" id= "gender">
                            <option value="" selected> Select </option>
                            {{#result}}
                            <option value="{{_id}}"> {{name}} </option>
                            {{/result}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="patient_id">Patient ID</label>
                            <input type="text" name="patient_id" id="patient_id" class="form-control input-rounded" placeholder="Patient ID">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="phone_number">Phone Number</label>
                            <input type="text" name="phone_number" id="phone_number" class="form-control input-rounded" placeholder="Phone Number">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" for="email">Email Address</label>
                            <input type="text" name="email" id="email" class="form-control input-rounded" placeholder="Email Address">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label" for="address">Address</label>
                    <input type="text" name="address" id="address" class="form-control input-rounded" placeholder="Address">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-rounded">Save</button>
                </div>
         </form>
    </div>
</div>


